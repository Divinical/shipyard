# .env.template - ShipYard Bot Configuration
# Copy this file to .env and fill in your values

# Discord Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
CLIENT_ID=your_client_id_here
DISCORD_GUILD_ID=your_guild_id_here

# Channel IDs
ANNOUNCEMENTS_CHANNEL_ID=your_announcements_channel_id
INTRO_CHANNEL_ID=your_intro_channel_id
BUILD_LOG_CHANNEL_ID=your_build_log_channel_id
CLINIC_CHANNEL_ID=your_clinic_channel_id
HELP_CHANNEL_ID=your_help_channel_id
SHOWCASE_CHANNEL_ID=your_showcase_channel_id
MOD_ROOM_CHANNEL_ID=your_mod_room_channel_id
WEEKLY_MEET_VOICE_ID=your_weekly_meet_voice_id
DOCK_CHECK_CHANNEL_ID=your_dock_check_channel_id
FEEDBACK_CLINIC_CHANNEL_ID=your_feedback_clinic_channel_id
JOBS_COLLABS_CHANNEL_ID=your_jobs_collabs_channel_id
RESOURCES_CHANNEL_ID=your_resources_channel_id

# Database Configuration
# For SQLite (self-contained database - recommended)
DATABASE_URL=sqlite://./shipyard.db
# For PostgreSQL (if needed later)
# DATABASE_URL=postgresql://username:password@localhost:5432/shipyard_bot

# Server Configuration
SERVER_TIMEZONE=Europe/London
NODE_ENV=development

# Optional Security
ENCRYPTION_KEY=your_optional_encryption_key_for_pii

# Bot Configuration
BOT_PREFIX=/
MAX_JOIN_RATE_PER_MIN=8
QUARANTINE_DURATION_MINUTES=10

# Cron Job Times (24-hour format)
DOCK_CHECK_TIME=09:00
ACTIVITY_MONITOR_TIME=10:00
WEEKLY_DIGEST_TIME=18:00
SHOWCASE_THREAD_TIME=12:00
QUIET_NUDGE_TIME=11:00

# Default Policies (can be overridden in database)
DEFAULT_ACTIVE_WEEKS_REQUIRED=2
DEFAULT_HELPFUL_CLINICS_REQUIRED=2
DEFAULT_QUIET_DAYS_BEFORE_NUDGE=10
DEFAULT_INACTIVE_DAYS_WARNING=14
DEFAULT_INACTIVE_DAYS_REMOVAL=28

# Gamification Defaults
GAMIFICATION_ENABLED=true
SEASON_LENGTH_WEEKS=6
WEEKLY_GOAL_ACTIONS=2
POINTS_PER_ACTION=1
MAX_POINTS_PER_WEEK=3
MEET_ATTENDANCE_BONUS=1
DEMO_PRESENTED_BONUS=1
PUBLIC_LEADERBOARD=false

# Feature Flags
ENABLE_RAID_SHIELD=true
ENABLE_CHANNEL_GUARDRAILS=true
ENABLE_NO_COLD_DM=true
ENABLE_CONSENT_RECORDING=true
ENABLE_GAMIFICATION=true
ENABLE_THREAD_STARTERS=true

# Logging
LOG_LEVEL=info
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/shipyard-bot.log